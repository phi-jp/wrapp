<?xml version='1.0' encoding='utf-8'?>
<widget id="jp.phi.FlickArrow" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FlickArrow</name>
    <description>
        A simple game.
    </description>
    <author email="phi1618jp@gmail.com" href="http://phiary.me">
        phi jp
    </author>
    <content src="http://phi-jp.github.io/flick-arrow/?platform=cordova" />
    <content src="http://localhost:8080/github/flick-arrow/?platform=cordova" />
    
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
